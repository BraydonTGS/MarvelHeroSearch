@using MarvelHeroSearch.Models.DbModels;
@model IEnumerable<CharacterDb>

<style>

    .header {
        text-align: center;
    }

    .error-container {
        background-color: #FDF5E6;
    }
</style>

<div class="error-container border border-dark border-3 m-3 p-3 shadow-lg text-center">
    <h1 class="h1-header display-1 mt-4 text-warning">Coming Soon</h1>
    <div style="display: block">
        <a href="/Character/Index" class="btn btn-dark shadow">Go Back</a>
    </div>
</div>

@foreach (var hero in Model)
{
    <div class="bg bg-danger">
        <p>@hero.CharacterName</p>
    </div>
}

